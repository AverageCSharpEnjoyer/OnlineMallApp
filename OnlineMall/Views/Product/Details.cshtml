@model OnlineMall.Models.Product

@{
    ViewData["Title"] = "Product details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md">
                 <img src="@Model.ImgPath" class="card-img-top" alt="Green jacket" />
            </div>
            <div class="col-md">
                <h5>@Model.ShortName</h5>
                <p>@Model.FullName</p>
                <p>@Model.Color</p>
                <p>@Model.Size</p>
                <p>@Model.Price</p>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
